@model MyShop.Core.Models.Product

@{
    ViewBag.Title =Model.Name + "Details";
}

<h2>@Html.DisplayFor(model=>Model.Name)</h2>

<h2>Details</h2>

<div>
    <div class="col-lg-2">
        <img class="img-responsive" src="~/Content/ProductImages/@Model.Image" style="height: 125px; width:125px ;object-fit: contain; border: 2px solid black"/>
    </div>
    <div class="col-lg-10">
         <dl class="dl-horizontal">
            

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                $@Html.DisplayFor(model => model.Price)
            </dd>

             <dt></dt>
             <dd><a href="@Url.Action("AddToBasket", "Basket", new { Id=Model.Id })" class="btn btn-default">Add To Basket</a></dd>
             
             <dt></dt>
             <dd>@Html.ActionLink("Back to List", "Index")</dd>
           
         </dl>
    </div>
</div>
<div class="col-md-12 clearfix"></div>